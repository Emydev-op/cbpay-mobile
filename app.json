{
  "expo": {
    "name": "CBPay",
    "slug": "cbpay",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/logo/logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/logo/splash-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./assets/logo/splash-logo.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/logo/splash-logo.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "splash": {
          "image": "./assets/logo/splash-logo.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/logo/splash-logo.png",
            "resizeMode": "contain",
            "backgroundColor": "#000000"
          }
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/intedm-sansr/DMSans_400Regular.ttf",
            "node_modules/@expo-google-fonts/intedm-sansr/DMSans_500Medium.ttf",
            "node_modules/@expo-google-fonts/intedm-sansr/DMSans_700Bold.ttf"
          ]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CBPay to access your camera",
          "microphonePermission": "Allow CBPay to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
